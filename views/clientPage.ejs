<!DOCTYPE html>
<html>

<head>
	<link href="https://fonts.googleapis.com/css2?family=Cuprum&display=swap" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Beau Rivage' rel='stylesheet'>
	<title>Client Page</title>
</head>
<style>

    *{
		margin: 0%;
		background-color: rgb(26, 188, 156);
		font-family: 'Cuprum', sans-serif;
        
	}
    body{
        min-height: 100vh;
        display: flex;
  flex-direction: column;
    }

    #top{
		background-image: url("./photo-1481627834876-b7833e8f5570.jpeg");
		padding-top: 10px;
		height: 100px;
		text-align: center;
		font-weight: bold;
		font-size: 70px ;
		font-family: 'Beau Rivage';
		-webkit-text-stroke: 0.2px rgb(0, 0, 0);
	}


	h1{
        font-size: 50px ;
		-webkit-text-stroke: 1.5px rgb(0, 0, 0);
		margin-bottom: -0.3px;
		margin-top: 30px;
		margin-left: 100px;
	}


	table {
		width: 95%; 
		
		margin: auto;
		box-shadow:2px 2px 6px 5px #080804;
		margin-top: 18px;
		margin-bottom: 25px;
		border-collapse: collapse;
  		border-radius: 1em;
  		overflow: hidden;
		
	}
	table:hover{
		box-shadow:10px 10px 30px rgb(0, 0, 0);
	}


	th{
		color: #000000;
		font-size: 27px;
		-webkit-text-stroke: 0.12px rgba(0, 0, 0, 0.5);;

	}


	td,
	th {
		
		text-align: center;
		padding: 1em;
 		 border-bottom: 2px solid rgb(0, 0, 0); 
	}

    button{
	  color: #030202;
	  font: 20px bold;
      border-radius: 12px;
      padding: 10px;
      margin-top: 5px;
	  width: 80px;
	}

	button:hover{
		border: 2px solid black;
		color:black;
		cursor:grab;
	}

	.myFooter{
		height: 50px;
    	background-color:rgba(10, 10, 10, 0.4);
		 padding-top: 15px; 
		margin-top: auto;
		
	}


	.myFooter h3,p{
		text-align: center;
		font-size: 16px;
		color: rgb(255, 255, 255,0.9);  
	}


	#heart{
		color: crimson;
	}
</style>

<body>
    <h4 id="top">Library System</h4>
	<h1>All Books</h1>
	<table>
		<tr>
			<th>Book Name</th>
            <th>Book Author</th>
            <th>Book Quantity</th>
            <th>Book Price</th>
            <th>Book Availability</th>
            <th>buy</th>
		</tr>
		<% data.forEach(element=> { %>
			<tr>
                <td>
                    <%= element.name %>
                </td>
                <td>
                    <%= element.author %>
                </td>
                <td>
                    <%= element.quantity %>
                </td>
                <td>
                    <%= element.bookPrice %>
                </td>
                <td>
                    <%= element.isAvaliable %>
                </td>
                <td>
                    <form action="/client/buy" method="post">
                        <input type="text" style="display: none;" 
                               name="name" 
                               value="<%= element.name %>">
                        <button type="submit">Buy</button>
                    </form>
                </td>
            </tr>
            <% }) %>

	</table>
	
    <footer class="myFooter">
        <p style="background-color: rgba(10, 10, 10, 0);">Copyright Â© 2021. All Rights Reserved.</p>
        <h3 style="background-color: rgba(10, 10, 10, 0);">Made with <span style="background-color: rgba(10, 10, 10, 0)" id="heart">&#10084;</span> by Mohamed Alaa</h3>
    </footer>

</body>


</html>